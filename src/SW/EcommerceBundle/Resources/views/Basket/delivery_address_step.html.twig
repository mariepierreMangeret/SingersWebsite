{% extends "::base.html.twig" %}

{% block title %}
    Boutique - {{ parent() }}
{% endblock %}

{% block body %}

	<link rel="stylesheet" href="{{ asset('css/shop.css') }}"/>

    {{ render(controller(
        'SW\\PlatformBundle\\Controller\\PlatformController::bannerAction'
    )) }}

    <div class="row" style="background-color:#eee;">
        <div class="col-12 center-col  margin-20px-top  text-center wow fadeInUp">
            <div class="alt-font margin-5px-bottom text-uppercase text-small letter-spacing-1" style="color:#3C7CDD;">Validation de la commande (1/3)</div>
            <h5 class="margin-10px-bottom font-weight-300">Mon adresse de livraison</h5>
            <div class="separator-line-horrizontal-medium-light2 bg-pink center-col"></div>
        </div>
    </div>

 	<div class="blogs padding-30px-top padding-30px-bottom">
		<div class="posts">
			{% for message in app.session.flashbag.get('notice') %}
                <p class="alert alert-success">{{ message }}</p> 
            {% endfor %}
 			<div class="container padding-bottom-3x mb-1" style="background-color:white;padding-top:20px;">
				{{ form_start(form) }}
				{{ form_errors(form) }}
				<form id="contactForm" method="post" class="contact-form wow fadeInUp" data-wow-duration="0.6s" action="{{ path('sw_ecommerce_shop_basket_delivery_address') }}">
					<div class="row col-xl-8 offset-xl-2">
						<div class="col-sm-6">
							<div class="form-group">
								<label for="checkout-fn">Nom</label>
								{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label for="checkout-ln">Prénom</label>
								{{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					</div>
					<div class="row col-xl-8 offset-xl-2">
						<div class="col-sm-12">
							<div class="form-group">
								<label for="checkout-fn">Numéro et nom de rue</label>
								{{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					</div>
					<div class="row col-xl-8 offset-xl-2">
						<div class="col-sm-6">
							<div class="form-group">
								<label for="checkout-city">Code postal</label>
								{{ form_widget(form.postalcode, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<label for="checkout-zip">Ville</label>
								{{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					</div>
					<div class="row col-xl-8 offset-xl-2">
						<div class="col-sm-12">
							<div class="form-group">
								<label for="checkout-company">Pays</label>
								{{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					</div>
					<div class="row col-xl-8 offset-xl-2">
						<div class="col-sm-12">
							<div class="form-group">
								<label for="checkout-email">Téléphone</label>
								{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
					</div>

					<div class="col-md-12 text-center wow fadeInUp" data-wow-delay="0.8s">
                        <input class="btn" name="Send" type="submit" value="Modifier" style="margin-top:30px;">
                    </div>
				{{ form_end(form) }}
				</form>
			</div>

			<!-- retour -->
			<div class="pagination text-uppercase wow fadeInUp" style="margin-top:30px;">
		        <ul>
		            <li>
		                <a href="{{ path('sw_ecommerce_shop_basket') }}">Retour</a>
		                <a href="">Etape suivante</a>
		            </li>
		        </ul>
		    </div>
		</div>
	</div>
{% endblock %} 